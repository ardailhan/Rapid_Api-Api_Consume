@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Bookings</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Guest Name</th>
                            <th>Checkin</th>
                            <th>Checkout</th>
                            <th>Status</th>
                            <th>Approve</th>
                            <th>Cancel</th>
                            <th>Pend</th>
                            <th>Update</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))</td>
                                <td>@(((DateTime)item.Checkout).ToString("dd-MMM-yyyy"))</td>
                                <td><span class="badge badge-primary px-2">@item.Status</span></td>
                                <td><a href="/BookingAdmin/ApprovedReservation2/@item.BookingID" class="btn btn-outline-primary">Approve</a></td>
                                <td><a href="#" class="btn btn-outline-danger">Cancel</a></td>
                                <td><a href="#" class="btn btn-outline-warning">Pend</a></td>
                                <td><a href="#" class="btn btn-outline-info">Update</a></td>
                                <td><a href="#" class="btn btn-outline-dark">Details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

