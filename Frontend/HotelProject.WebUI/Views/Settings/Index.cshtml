@model HotelProject.WebUI.Models.Setting.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Profile Settings and Password Edit</h1>

<form method="post">
    <label>Name</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Surname</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />
    <label>Username</label>
    <input type="text" class="form-control" asp-for="Username" readonly />
    <br />
    <label>Email Adress</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Password</label>
    <input type="password" class="form-control" asp-for="Password" />
    <br />
    <label>Password Confirm</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" />
    <br />
    <button class="btn btn-success">Update Settings</button>
</form>